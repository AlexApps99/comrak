#!/bin/bash

set -ev

sudo apt-get install python3
cargo build --verbose

if [ x"$SPEC" = "xtrue" ]; then
	cd vendor/cmark-gfm
	python3 test/spec_tests.py --program=../../target/debug/comrak --spec=../CommonMark/spec.txt
	python3 test/roundtrip_tests.py --program=../../target/debug/comrak --spec=../CommonMark/spec.txt
else
	cargo test --verbose
fi
